@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form enctype="multipart/form-data" id="profile-form " method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Surname"></label>
                <input asp-for="Input.Surname" class="form-control" />
                <span asp-validation-for="Input.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.BirthDate" class="control-label"></label>
                <input asp-for="Input.BirthDate" class="form-control" />
                <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.About" class="control-label"></label>
                <input asp-for="Input.About" class="form-control" />
                <span asp-validation-for="Input.About" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <img src="~/images/@Model.ViewData["Photo"]"
                 height="110" width="110"
                 asp-append-version="true" />
            <div class="form-group">
                <label asp-for="Input.Photo" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="Input.Photo" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
                <span asp-validation-for="Input.Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="container" style="display: inline-block;background: #FEBFB2;width: 180px;">
                    <label asp-for="Input.IsPhotoToBeDeleted" class="control-label" style="float:left;margin-top:7px"></label>
                    <input asp-for="Input.IsPhotoToBeDeleted" class="form-control" style="width: 20px; float:left; margin-left:20px" />
                </div>
                <span asp-validation-for="Input.IsPhotoToBeDeleted" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Kaydet</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script type="text/javascript">

        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
} 