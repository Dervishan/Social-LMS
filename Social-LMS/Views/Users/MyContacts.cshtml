@model IEnumerable<Social_LMS.Models.User>

@{
    ViewData["Title"] = "MyContacts";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="fa fa-user-md"></i> Bağlantılarım</h3>
                    <ol class="breadcrumb">
                        <li><i class="fa fa-home"></i><a asp-action="Index" asp-controller="Home">Anasayfa</a></li>
                        <li><i class="fa fa-user-md"></i>Bağlantılar</li>
                    </ol>
                </div>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Surname)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BirthDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.About)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Year)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Photo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PhoneNumber)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Surname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BirthDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.About)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Year)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Photo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td
                            <td>
                                <a asp-action="Profile" asp-route-id="@item.Id">Profili görüntüle</a> |
                                <a asp-action="RemoveContact" asp-route-id="@item.Id">Bağlantılarımdan çıkar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- page end-->
        </section>
    </section>