@model Social_LMS.Models.Message

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa fa-bars"></i> Mesajlar</h3>
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i>Anasayfa</li>
                    <li><i class="fa fa-bars"></i>Mesajlar</li>
                    <li><i class="fa fa-envelope"></i>Mesaj Oluştur</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Text" class="control-label"></label>
                        <input asp-for="Text" class="form-control" />
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RecipientUserId" class="control-label"></label>
                        <select asp-for="RecipientUserId" class="form-control" asp-items="ViewBag.RecipientUserId">
                            <option disabled selected>--- Alıcı ---</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="GroupId" class="control-label"></label>
                        <select asp-for="GroupId" class="form-control" asp-items="ViewBag.GroupId">
                            <option disabled selected>--- Grup ---</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Listeye dön</a>
        </div>


    </section>
</section>