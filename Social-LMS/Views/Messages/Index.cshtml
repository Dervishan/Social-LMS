@model IEnumerable<Social_LMS.Models.Message>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa fa-bars"></i> Mesajlar</h3>
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i>Anasayfa</li>
                    <li><i class="fa fa-pagelines"></i>Mesajlar</li>
                </ol>
            </div>
        </div>
        <!-- page start-->
        <p>
            <a asp-action="Create">Yeni oluştur</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Text)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsDeleted)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sender)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RecipientUserId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Group)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDeleted)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SenderUserId)
                    </td>
                    @if (item.RecipientUserId != null)
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.RecipientUserId)
                        </td>
                    }
                    else
                    {
                        <td>
                            -
                        </td>
                    }
                    @if (item.GroupId != null)
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.Group.Name)
                        </td>
                    }
                    else
                    {
                        <td>
                            -
                        </td>
                    }
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Detaylar</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        <!-- page end-->
    </section>
</section>